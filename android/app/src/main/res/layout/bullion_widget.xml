<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEEEC"
    android:theme="@style/Theme.Android.AppWidgetContainer">

    <TextView
        android:id="@+id/headline_title"
        style="@style/Widget.Android.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:textColor="#767B86"
        android:background="#FBEEEC"
        android:includeFontPadding="false"
        android:text="Gold"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headline_description"
        style="@style/Widget.Android.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headline_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="#FBEEEC"
        android:includeFontPadding="false"
        android:text="$2000"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/price_changes"
        style="@style/Widget.Android.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headline_description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:padding="2dp"
        android:background="#FBEEEC"
        android:includeFontPadding="false"
        android:text="-($6.00) (-0.3%)"
        android:textColor="#CD3737"
        android:textSize="11sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/price_changes"
        android:layout_alignStart="@+id/headline_description"
        android:layout_alignEnd="@+id/headline_description"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="#FBEEEC"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/icon_background"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerInParent="true"
        android:alpha="0.1"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bull_logo" />

</RelativeLayout>